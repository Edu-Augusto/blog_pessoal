<%- include ../../partials/header.ejs %>

    <body>
        <%- include ../../partials/navbar.ejs %>
            <h2>Artigos</h2>

            <table class="table table-dark table-striped table-bordered table-hover table-sm">
                <thead>
                    <tr>
                        <th scope="col">id</th>
                        <th scope="col">título</th>
                        <th scope="col">Slug</th>
                        <th scope="col">Categoria</th>
                        <th scope="col">Ações</th>
                </thead>
                <tbody>
                    <% articles.forEach(articles=>{ %>

                        <tr>
                            <th>
                                <%= articles.id %>
                            </th>
                            <th>
                                <%= articles.title %>
                            </th>
                            <th>
                                <%= articles.slug %>
                            </th>
                            <th>
                                <%= articles.category.title %>
                            </th>
                            <th>
                                <a href="/article/edit/<%=articles.id%>" class="btn btn-warning" id="bt_edit">Editar</a>
                                <form method="POST" action="/article/delete" style="display: inline;"
                                    onsubmit="deletarArt(event,this)">
                                    <input type="hidden" value="<%= articles.id %>" name="id">
                                    <button class="btn btn-danger">Deletar</button>
                                </form>
                            </th>
                        </tr>

                        <% })%>
                </tbody>
            </table>
            <a style="height: 2%; margin: 1%;" class="btn btn-success float-end " href="/admin/article/new"> Criar
                artigo</a>

    </body>
    <%- include ../../partials/footer.ejs %>
        <script>
            function deletarArt(event, form) {
                event.preventDefault();
                var decision = confirm('Você realmente quer deletar esse artigo?');
                if (decision) {
                    form.submit();
                }
            }
        </script>